<?xml version="1.0"?>
<component name="org.nuxeo.rss.feed.ui">

  <extension target="org.nuxeo.ecm.platform.forms.layout.WebLayoutManager"
    point="widgets">

    <widget name="title" type="text">
      <labels>
        <label mode="any">label.rss feed title</label>
      </labels>
      <translated>false</translated>
      <fields>
        <field>dc:title</field>
      </fields>
      <properties mode="any">
        <property name="help">help.rss.feed.title</property>
      </properties>
    </widget>

    <widget name="rssUrl" type="text">
      <labels>
        <label mode="any">label.rss feed address</label>
      </labels>
      <translated>true</translated>
      <fields>
        <field>rf:rss_address</field>
      </fields>
      <properties mode="any">
        <property name="help">help.rss.feed.address</property>
      </properties>
    </widget>

    <widget name="defineAsDefaultRssFeed" type="checkbox">
      <labels>
        <label mode="any">label.rss.feed.default</label>
      </labels>
      <translated>true</translated>
      <fields>
        <field>rf:is_default_feed</field>
      </fields>
<!--       <properties widgetMode="any"> -->
      <properties mode="any">
        <property name="required">true</property>
        <property name="styleClass">dataInputText</property>
        <property name="help">help.rss.feed.default</property>
      </properties>
    </widget>

  </extension>

  <extension target="org.nuxeo.ecm.platform.forms.layout.WebLayoutManager"
    point="layouts">

    <layout name="heading_">
      <templates>
        <template mode="any">/layouts/layout_default_template.xhtml
        </template>
      </templates>
      <rows>
        <row>
          <widget>title</widget>
        </row>
      </rows>
    </layout>

    <layout name="rss_diplay">
      <templates>
        <template mode="any">/layouts/layout_default_template.xhtml
        </template>
      </templates>
      <rows>
        <row>
          <widget>rssUrl</widget>
        </row>
        <row>
          <widget>defineAsDefaultRssFeed</widget>
        </row>
      </rows>
    </layout>
  </extension>

</component>