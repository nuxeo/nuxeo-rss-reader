<?xml version="1.0" encoding="UTF-8"?>
<component name="org.nuxeo.rss.feed.types">
  <extension target="org.nuxeo.ecm.platform.types.TypeService"
    point="types">

    <type id="RssFeed">
      <label>RssFeed</label>
      <icon>/icons/note.gif</icon>
      <bigIcon>/icons/note_100.png</bigIcon>
      <category>SimpleDocument</category>
      <description>syndication flux</description>
      <default-view>view_documents</default-view>
      <layouts mode="any">
        <layout>heading</layout>
        <layout>rss_display</layout>
      </layouts>
    </type>

    <type id="Workspace">
      <subtypes>
        <type>RssFeed</type>
      </subtypes>
    </type>

    <type id="RssFeedRoot">
      <label>RssFeedRoot</label>
      <icon>/icons/ordered_folder.png</icon>
      <bigIcon>/icons/ordered_folder_100.png</bigIcon>
      <icon-expanded>/icons/ordered_folder_open.png</icon-expanded>
      <default-view>view_documents</default-view>
      <subtypes>
        <type>RssFeed</type>
      </subtypes>
      <layouts mode="any">
        <layout>heading</layout>
      </layouts>
      <layouts mode="edit">
        <layout>heading</layout>
        <layout>dublincore</layout>
      </layouts>
      <contentViews category="content">
        <contentView>orderable_document_content</contentView>
      </contentViews>
      <contentViews category="trash_content">
        <contentView showInExportView="false">
          document_trash_content
        </contentView>
      </contentViews>
    </type>

  </extension>
</component>
